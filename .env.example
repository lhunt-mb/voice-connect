# Server Configuration
HOST=0.0.0.0
PORT=8000
PUBLIC_HOST=your-domain.ngrok.io
LOG_LEVEL=INFO

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+61XXXXXXXXX

# Voice Provider Configuration
# Options: "openai" or "nova"
VOICE_PROVIDER=openai

# OpenAI Configuration (required if VOICE_PROVIDER=openai)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
OPENAI_VOICE=verse

# AWS Configuration
AWS_REGION=ap-southeast-2  # Region for DynamoDB and Lambda
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
DYNAMODB_ENDPOINT_URL=http://localhost:8001
DYNAMODB_TABLE_NAME=HandoverTokens

# Nova 2 Sonic Configuration (required if VOICE_PROVIDER=nova)
# Must be one of: us-east-1, eu-north-1, ap-northeast-1
NOVA_REGION=ap-northeast-1

# Amazon Connect Configuration
CONNECT_PHONE_NUMBER=+61XXXXXXXXX
CONNECT_INSTANCE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# HubSpot Configuration (Optional - set ENABLE_HUBSPOT=false to disable)
ENABLE_HUBSPOT=true
HUBSPOT_ACCESS_TOKEN=pat-xx-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
HUBSPOT_API_BASE_URL=https://api.hubapi.com

# Token Configuration
TOKEN_TTL_SECONDS=600
TOKEN_LENGTH=10

# Development (use for local DynamoDB)
USE_LOCAL_DYNAMODB=true
